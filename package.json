{
  "name": "thot-backend",
  "version": "1.0.0",
  "description": "Backend for Thot journalism platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:clean": "./scripts/kill-port.sh && nodemon src/server.js",
    "test": "jest --runInBand --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand --forceExit",
    "test:unit": "jest tests/unit --runInBand --forceExit",
    "test:unit:watch": "jest tests/unit --watch",
    "test:unit:coverage": "jest tests/unit --coverage --runInBand --forceExit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:security": "jest tests/security --runInBand --forceExit",
    "test:performance": "jest tests/performance --runInBand --forceExit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "test:report": "jest --coverage --coverageReporters=html --runInBand --forceExit && open coverage/index.html",
    "test:verbose": "jest --verbose --runInBand --forceExit",
    "test:silent": "jest --silent --runInBand --forceExit",
    "create-admin": "node scripts/createAdmin.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "create-indexes": "node scripts/createIndexes.js",
    "test:load": "artillery run tests/performance/load-test.yml",
    "test:stress": "artillery run tests/performance/stress-test.yml",
    "test:artillery": "npm run test:load && npm run test:stress",
    "clean": "node scripts/cleanDatabase.js",
    "clean:fast": "./clean-all.sh",
    "clean:uploads": "rm -rf uploads/* public/uploads/* test-generated-images/*",
    "clean:logs": "rm -rf logs/*",
    "clean:db": "mongosh thot_journalism --eval 'db.dropDatabase()'",
    "db:regenerate": "node scripts/regenerateDatabase.js",
    "db:fresh": "npm run clean && npm run db:regenerate"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@sentry/node": "^10.18.0",
    "@sentry/profiling-node": "^10.18.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.2.0",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "form-data": "^4.0.1",
    "google-auth-library": "^10.4.0",
    "helmet": "^8.1.0",
    "image-size": "^2.0.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.1.1",
    "node-fetch": "^3.3.2",
    "opossum": "^9.0.0",
    "rate-limit-redis": "^4.2.2",
    "sharp": "^0.34.3",
    "snappy": "^7.2.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "express-xss-sanitizer": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.37.0",
    "@types/jest": "^30.0.0",
    "artillery": "^2.0.26",
    "axios": "^1.10.0",
    "babel-jest": "^30.0.5",
    "eslint": "^9.37.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemailer": "^7.0.9",
    "nodemon": "^3.1.10",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  }
}
